pipeline {
    agent any
    parameters {
        // Параметры будут определены через UI с Active Choices
    }
    stages {
        stage('Process Parameters') {
            steps {
                script {
                    echo "Выбранный триггер: ${params.TRIGGER_TYPE}"
                    echo "Выбранные детали: ${params.PAPKE}"
                    if (params.TRIGGER_TYPE == 'Cron') {
                        echo "Настройка Cron: ${params.PAPKE}"
                    } else if (params.TRIGGER_TYPE == 'Webhook') {
                        echo "Настройка Webhook: ${params.PAPKE}"
                    }
                }
            }
        }
    }
}